<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Mute_at_Office.Pages.ZoneConditionEdit.ZoneConditionEditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mute_at_Office.Pages.ZoneConditionEdit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="26" Margin="20,30">
        <TextBlock
                Text="Edit zone condition"
                FontSize="28"
                FontWeight="SemiBold"
                />
        <Grid Padding="12" RowSpacing="8" ColumnSpacing="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Speaker</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{x:Bind ZoneCondition.SpeakerName, Mode=TwoWay}" />
            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">SSID</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{x:Bind ZoneCondition.Ssid, Mode=TwoWay}" />
        </Grid>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="{x:Bind SaveButtonText, Mode=OneTime}" Style="{StaticResource AccentButtonStyle}" Click="SaveButton_Clicked" />
            <Button Content="Cancel" Click="CancelButton_Clicked" />
        </StackPanel>
    </StackPanel>
</Page>

<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Mute_at_Office.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mute_at_Office"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="using:H.NotifyIcon"
    mc:Ignorable="d"
    Title="Mute-at-Office">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <NavigationView
            x:Name="MainNavigationView"
            OpenPaneLength="150"
            CompactModeThresholdWidth="300"
            ExpandedModeThresholdWidth="500"
            SelectionChanged="NavigationView_SelectionChanged"
            IsBackEnabled="{x:Bind ContentFrame.CanGoBack, Mode=OneWay}"
            BackRequested="NavigationView_BackRequested"
            >
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Dashboard" Icon="ViewAll" Tag="Dashboard" />
                <NavigationViewItem Content="History" Icon="List" Tag="History" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame"/>
        </NavigationView>

        <tb:TaskbarIcon
           x:Name="TrayIcon"
           ToolTipText="Mute at Office"
           IconSource="/Assets/TaskTrayIcon.ico"
           LeftClickCommand="{x:Bind ShowWindowCommand}"
           >
            <tb:TaskbarIcon.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem
                       Text="Show"
                       Command="{x:Bind ShowWindowCommand}" />
                    <MenuFlyoutItem
                       Text="Exit"
                       Command="{x:Bind CloseWindowCommand}" />
                </MenuFlyout>
            </tb:TaskbarIcon.ContextFlyout>
        </tb:TaskbarIcon>
    </Grid>
</Window>
